<div class="item">
    <div>Categoria</div>
    <div>
        <select name="category_id">
            {% for category in categories %}
                <option value="{{category.id}}" {% if product.category_id == category.id %} selected {% endif %}>
                    {{category.name}}
                </option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text" 
            name="name" 
            value="{{ product.name }}"
            placeholder="Digite o título do anúncio"
        >
    </div>
</div>

<div class="item">
    <div>Descrição</div>
    <div>
        <textarea name="description">{{product.description}}</textarea>
    </div>
</div>

{# campo de foto #}

<div class="item">
    <div>Valor</div>
    <div>
        <input 
            type="text" 
            name="price" 
            value="{{ product.price }}"
            placeholder="Preço do produto"
            onkeydown="Mask.apply(this, 'formatBRL')"
        >
    </div>
    {% if product.old_price %}
        <input type="hidden" name="old_price" value="{{product.old_price}}">
    {% endif %}
</div>

<div class="item">
    <div>Quantidade</div>
    <div>
        <input 
            type="number" 
            name="quantity" 
            value="{{ product.quantity }}"
            placeholder="Estoque Disponível"
        >
    </div>
</div>

{% if (product.status == '1') or (product.status == '0') %}
<div class="item">
    <div>Disponível</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="status" 
                value="1"
                {% if product.status == '1' %}
                    checked
                {% endif %}
            > Sim
        </span>
        
        <span>
            <input 
                type="radio" 
                name="status" 
                value="0"
                {% if product.status == '0' %}
                    checked
                {% endif %}
            > Não
        </span>
    </div>
</div>
{% endif %}
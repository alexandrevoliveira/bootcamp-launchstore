<div class="item">
    <div>Nome Completo</div>
    <div>
        <input 
            type="text" 
            name="name" 
            value="{{ user.name }}"
            placeholder="Digite o seu nome completo"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email" 
            name="email" 
            value="{{ user.email }}"
            placeholder="Digite seu email completo"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div>
        <input 
            type="password" 
            name="password" 
            value="{{ user.password }}"
            placeholder="Digite uma senha segura"
        >
    </div>
</div>

{% if not user.id %}
    <div class="item">
    <div>Repetir senha</div>
    <div>
        <input 
            type="password" 
            name="passwordRepeat" 
            value="{{ user.passwordRepeat }}"
            placeholder="Digite uma senha segura"
        >
    </div>
</div>
{% endif %}

<div class="item">
    <div>CPF ou CNPJ</div>
    <div>
        <input 
            type="text" 
            name="cpf_cnpj" 
            value="{{ user.cpf_cnpj }}"
            placeholder="Digite seu documento"
        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div>
        <input 
            type="text" 
            name="cep" 
            value="{{ user.cep }}"
            placeholder="99999-000"
        >
    </div>
</div>


<div class="item">
    <div>Endereço Completo</div>
    <div>
        <input 
            type="text" 
            name="address" 
            value="{{ user.address }}"
            placeholder="Digite seu endereço completo"
        >
    </div>
</div>
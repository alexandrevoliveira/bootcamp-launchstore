{% macro products(name, classes, products) %}

<section class="shop {{classes}}">

    {% if name %}
        <h2>{{name}}</h2>
    {% endif %}

    <div class="items">

        {% for product in products %}
            <div class="product">
                <div
                    class="image"
                    style="background-image: url({{product.img if product.img else '//placehold.it/500x360'}})"
                >
                </div>

                <div class="price">
                    <p>{{product.price}}</p>
                    {% if product.oldPrice != product.price %}
                        <div class="old-price">{{product.oldPrice}}</div>
                    {% endif %}
                </div>        
                <h4>{{product.name}}</h4>
                <a href="/products/{{product.id}}" class="button">Ver produto</a>
            </div>
        {% endfor %}
        
    </div>

</section>

{% endmacro %}